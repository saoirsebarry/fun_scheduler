datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  fullName     String
  
  // RAW LLM INPUT: The original text the user wrote about themselves
  bio          String?  @db.Text 
  
  homeLocation String?  // Lat,Long or Address for distance calculation
  timezone     String   @default("UTC")

  // Relations
  hobbies      UserHobby[]
  availability AvailabilityWindow[]
  proposals    AgentProposal[]
  
  // Social Graph
  friends      User[]   @relation("UserFriends")
  friendOf     User[]   @relation("UserFriends")

  createdAt    DateTime @default(now())
}

model UserHobby {
  id             String @id @default(uuid())
  userId         String
  hobbyName      String // Extracted by LLM (e.g., "Hiking", "Baking")
  priorityScore  Int    @default(5) 
  
  // AI-DRIVEN LOGIC: e.g., {"min_temp": 15, "require_sun": true, "is_indoor": false}
  conditions     Json?  

  user           User   @relation(fields: [userId], references: [id])

  @@unique([userId, hobbyName])
}

model AvailabilityWindow {
  id        String   @id @default(uuid())
  userId    String
  dayOfWeek Int      // 0 (Sun) to 6 (Sat)
  startTime String   // "14:00"
  endTime   String   // "17:00"
  label     String   @default("Fun Time") // To distinguish from work slots

  user      User     @relation(fields: [userId], references: [id])
}

model AgentProposal {
  id           String   @id @default(uuid())
  userId       String
  activityName String
  scheduledFor DateTime
  status       String   @default("PENDING") // PENDING, ACCEPTED, REJECTED
  
  user         User     @relation(fields: [userId], references: [id])
}